{
  "name": "sizet",
  "version": "1.1.1",
  "description": "Easily calculate the size of an NPM package",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "compile": "swc src/index.ts src/utils/ -d dist --config-file .swcrc",
    "clean": "rmdir /Q /S dist",
    "build": "pnpm run compile && node scripts/build.js",
    "dev": "tsx src/dev.ts",
    "test": "tsx tests/index.test.ts",
    "pub": "pnpm run build && cd dist && pnpm publish",
    "patch": "pnpm version patch && pnpm run pub && git push --follow-tags && pnpm run clean",
    "minor": "pnpm version minor && pnpm run pub && git push --follow-tags && pnpm run clean",
    "major": "pnpm version major && pnpm run pub && git push --follow-tags && pnpm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FLzyy/sizet.git"
  },
  "keywords": [
    "size",
    "kb",
    "kilobytes",
    "limit",
    "performance"
  ],
  "author": "FLzyy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FLzyy/sizet/issues"
  },
  "homepage": "https://github.com/FLzyy/sizet#readme",
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.27",
    "@types/node": "^18.11.18",
    "@types/tar": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^27.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.3",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4"
  }
}